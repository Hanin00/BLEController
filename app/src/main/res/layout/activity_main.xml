<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btn_main_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.3"
        android:background="@drawable/btn_rounded"

        android:text="@string/btn_connectOn"
        android:textColor="@color/btn_textColor"
        android:textStyle="bold"
        android:textSize="15sp"
        android:padding="15dp"
        />

    <TextView
        android:id="@+id/txt_main_clicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_main_connect"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginTop="15dp"

        android:text="@string/txt_clicked"
        android:textSize="15sp"
        />

    <ImageView
        android:id="@+id/btn_main_go"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintDimensionRatio="1:1"
        android:padding="5dp"


        app:layout_constraintTop_toBottomOf="@id/txt_main_clicked"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"

        android:src="@drawable/up_arrow"
        android:background="@android:color/transparent"
        />

    <ImageView
        android:id="@+id/btn_main_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintDimensionRatio="1:1"
        android:padding="5dp"

        app:layout_constraintTop_toTopOf="@id/btn_main_stop"
        app:layout_constraintRight_toLeftOf="@id/btn_main_go"
        android:layout_marginRight="15dp"

        android:src="@drawable/left_arrow"
        android:background="@android:color/transparent"
        />


    <ImageView
        android:id="@+id/btn_main_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintDimensionRatio="1:1"
        android:padding="5dp"

        app:layout_constraintTop_toTopOf="@id/btn_main_stop"
        app:layout_constraintLeft_toRightOf="@id/btn_main_go"
        android:layout_marginLeft="15dp"

        android:src="@drawable/right_arrow"
        android:background="@android:color/transparent"

        />

    <ImageView
        android:id="@+id/btn_main_stop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintDimensionRatio="1:1"
        android:padding="5dp"

        app:layout_constraintTop_toBottomOf="@id/btn_main_go"
        app:layout_constraintLeft_toLeftOf="@id/btn_main_go"
        android:layout_marginTop="15dp"


        android:src="@drawable/stop_icon"
        android:background="@android:color/transparent"

        />

    <ImageView
        android:id="@+id/btn_main_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintDimensionRatio="1:1"
        android:padding="5dp"

        app:layout_constraintTop_toBottomOf="@id/btn_main_stop"
        app:layout_constraintLeft_toLeftOf="@id/btn_main_stop"
        android:layout_marginTop="15dp"


        android:src="@drawable/down_arrow"
        android:background="@android:color/transparent"

        />









</androidx.constraintlayout.widget.ConstraintLayout>